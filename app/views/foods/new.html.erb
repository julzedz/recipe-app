<h1>Add New Food</h1>

<%= form_with(model: @food, local: true) do |form| %>
  <div>
    <% form.label :name %>
    <%= form.text_field :name, class:"form-control", placeholder:"name" %>
  </div>
  <br/>
  <div>
    <% form.label :measurement_unit %>
    <%= form.text_field :measurement_unit, class:"form-control", placeholder:"measurement_unit" %>
  </div>
  <br/>
  <div>
    <% form.label :price %>
    <%= form.number_field :price, step: '0.1', class:"form-control", placeholder:"price" %>
  </div>
  <br/>
  <div>
    <% form.label :quantity %>
    <%= form.number_field :quantity, class:"form-control", placeholder:"quantity" %>
  </div>
    <br/>
  <div>
    <%= form.submit "Create Food" %>
  </div>
<% end %>
<%= link_to "Back to List", foods_path %>